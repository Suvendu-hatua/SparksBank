  <section class="service">
    <div class="register">
      <h1>Create a New Account</h1>
      <form class="was-validated" method="post">
        <div class="mb-3">
          <label class="form-label">User Name</label>
          <input type="text" id="name" name="userName" class="form-control" placeholder="Enter your name" required autocomplete="off">
          <div class="valid-feedback"></div>
          <div class="invalid-feedback">Please fill out user name.</div>
        </div>
        <div class="mb-3">
          <label class="form-label">Email Id</label>
          <input type="email" id="email" name="email" class="form-control" aria-describedby="emailHelp"
            placeholder="Enter your email" required autocomplete="off">
          <div class="valid-feedback"></div>
          <div class="invalid-feedback">Please fill out email id.</div>
        </div>
        <div class="mb-3">
          <label class="form-label">Phone Number</label>
          <input type="text" id="phno" name="phoneNo" class="form-control" aria-describedby="emailHelp"
            placeholder="Enter your Phone Number" required autocomplete="off">
          <div class="valid-feedback"></div>
          <div class="invalid-feedback">Please fill out phone number.</div>
        </div>
        <div class="mb-3">
          <label class="form-label">Address</label>
          <input type="text" id="address" name="address" class="form-control" placeholder="Enter your address" required autocomplete="off">
          <div class="valid-feedback"></div>
          <div class="invalid-feedback">Please fill out address.</div>
        </div>
        <div class="mb-3">
          <label class="form-label">Amount</label>
          <input type="number" id="amount" name="amount" class="form-control" placeholder="Enter the initial ammount" required autocomplete="off">
          <div class="valid-feedback"></div>
          <div class="invalid-feedback">Please fill out amount.</div>
        </div>
        <button  id="submit" class="btn btn-primary">Create Account</button>
        <div id="success">
          <!-- -->
          <div class="alert alert-success" role="alert">
              <h4 class="alert-heading">Well done!</h4>
              <p>Your Account has been created successfully.</p>
          </div>
      </div>
      </form>

    <script>
      const btn=document.getElementById("submit");
      btn.addEventListener("click",function(){
        const name=document.getElementById("name").value;
        const email=document.getElementById("email").value;
        const address=document.getElementById("address").value;
        const amount=document.getElementById("amount").value;
        const phno= document.getElementById("phno").value;
      if(name.length!=0 && email.length!=0 && phno.length===10 && address.length!=0 && amount>0)
      {
        // document.getElementById("success").style.display="contents";
        alert("Your Account has been created successfully.")
      }
         
      })
    </script>
